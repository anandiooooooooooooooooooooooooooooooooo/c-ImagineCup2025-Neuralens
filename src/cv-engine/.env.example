# Environment Configuration for NeuraLens CV Engine

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# YOLO Model Configuration
YOLO_MODEL_PATH=models/yolov9-c.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# MediaPipe Configuration
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# Video Processing
FRAME_SAMPLING_RATE=5
MAX_VIDEO_SIZE_MB=500

# Face Anonymization
BLUR_KERNEL_SIZE=50
ANONYMIZATION_METHOD=blur

# Behavioral Thresholds
MOVEMENT_THRESHOLD=0.70
ATTENTION_THRESHOLD=0.60

# Time Windows (seconds)
TIME_WINDOW_SHORT=30
TIME_WINDOW_MEDIUM=120
TIME_WINDOW_LONG=300

# Head Pose Thresholds (degrees)
ON_TASK_YAW_THRESHOLD=30
ON_TASK_PITCH_THRESHOLD=20

# Storage
TEMP_UPLOAD_DIR=temp/uploads
PROCESSED_FRAMES_DIR=temp/processed
